                        <Canvas.Background>
                            <SolidColorBrush Color="Transparent" />
                        </Canvas.Background>
                        <Path Stroke="Black" StrokeThickness="2" StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                            <Path.Data>
                                <PathGeometry>
                                    <PathGeometry.Figures>
                                        <PathFigure StartPoint="1,1">
                                            <LineSegment Point="9,9"/>
                                        </PathFigure>
                                        <PathFigure StartPoint="1,9">
                                            <LineSegment Point="9,1"/>
                                        </PathFigure>
                                    </PathGeometry.Figures>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

